{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@/*" : ["./src/*"],
      "components/*" : ["src/components/*"],
      "stores/*" : ["src/stores/*"],
      "types/*" : ["src/types/*"]
    }
  }
}
